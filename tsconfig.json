{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "angular-calendar-scheduler": ["./lib/public_api"],
      "core-js/es7/reflect": 
      ["node_modules/core-js/proposals/reflect-metadata"]
      ]
    },
  },
  "include": [
    "src",
    "lib",
    "tests"
  ]
}
